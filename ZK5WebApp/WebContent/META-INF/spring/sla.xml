<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:os-sla="http://www.openspaces.org/schema/sla"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
       http://www.openspaces.org/schema/sla http://www.openspaces.org/schema/12.1/sla/openspaces-sla.xsd">

    <!--
    	The SLA determines the number of web container instances that host the application, in our case 3 
     -->
    <os-sla:sla number-of-instances="3" max-instances-per-vm="1"/>
</beans>
